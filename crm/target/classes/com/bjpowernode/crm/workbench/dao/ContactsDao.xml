<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.workbench.dao.ContactsDao">

    <insert id="insertCon">
        insert into tbl_contacts(
                id,
                owner,
                source,
                customerId,
                fullname,
                appellation,
                email,
                mphone,
                job,
                birth,
                createBy,
                createTime,
                description,
                contactSummary,
                nextContactTime,
                address
        )values (
                #{id},
                #{owner},
                #{source},
                #{customerId},
                #{fullname},
                #{appellation},
                #{email},
                #{mphone},
                #{job},
                #{birth},
                #{createBy},
                #{createTime},
                #{description},
                #{contactSummary},
                #{nextContactTime},
                #{address}
                        )
    </insert>

        <select id="selectListByName" resultType="com.bjpowernode.crm.workbench.domain.Contacts">
                select id,
                               owner,
                        source,
                        customerId,
                        fullname,
                        appellation,
                        email,
                        mphone,
                        job,
                        birth,
                        createBy,
                        createTime,
                        editBy,
                        editTime,
                        description,
                        contactSummary,
                        nextContactTime,
                        address
                from tbl_contacts
                <where>
                        <if test=" fullname != null and fullname != ''">
                                fullname like '%' #{fullname} '%'
                        </if>
                </where>
        </select>
  	
</mapper>

































